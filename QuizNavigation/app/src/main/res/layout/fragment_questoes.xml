<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestoesFragment">

    <!-- TODO: Update blank fragment layout -->
    <RadioGroup
        android:id="@+id/opcaoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/opcao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="opcao 1" />
        <RadioButton
            android:id="@+id/opcao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="opcao 2" />
        <RadioButton
            android:id="@+id/opcao3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="opcao 3" />
        <RadioButton
            android:id="@+id/opcao4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="opcao 4" />
    </RadioGroup>

    <Button
        android:id="@+id/btnConfirma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirmar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opcaoes" />

</androidx.constraintlayout.widget.ConstraintLayout>